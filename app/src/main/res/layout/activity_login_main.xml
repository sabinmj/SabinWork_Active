<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.sabin.sabinwork_active.login_main"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/c"
        android:layout_alignParentTop="true"
        android:gravity="right">

    </LinearLayout>

    <FrameLayout
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnsignup"
        android:layout_marginTop="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="0.39"
        android:layout_gravity="center_horizontal"
        android:translationZ="5dp"
        android:background="#ffb7b7">

        <EditText
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etpswd"
            android:layout_below="@+id/etuname"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_margin="20dp" />

        <Button

            android:background="@color/b"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:text="login"
            android:id="@+id/btnlogin"
            android:layout_below="@+id/etpswd"
            android:onClick="do_login"
            android:layout_marginTop="50dp"
            android:layout_alignLeft="@+id/etpswd"
            android:layout_alignStart="@+id/etpswd"
            android:layout_alignRight="@+id/etpswd"
            android:layout_alignEnd="@+id/etpswd"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="20dp"
            android:translationZ="4dp"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etuname"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_margin="20dp" />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="331dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not yet registered ?"
            android:id="@+id/textView7"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/btnlogin"
            android:layout_alignStart="@+id/btnlogin"
            android:layout_margin="20dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Sign up"
            android:id="@+id/btnsignup"
            android:onClick="intent_signup"
            android:background="@color/b"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/btnlogin"
            android:layout_alignEnd="@+id/btnlogin"
            android:layout_margin="20dp"
            android:layout_weight="0.17"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>
